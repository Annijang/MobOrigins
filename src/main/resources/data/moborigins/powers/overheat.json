{
  "type": "origins:action_over_time",
  "interval": 20,
  "entity_action": {
    "type": "origins:if_else_list",
    "actions": [
      {
        "condition": {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:biome",
              "condition": {
                "type": "origins:temperature",
                "comparison": "<",
                "compare_to": 1.0
              }
            },
            {
              "type": "origins:on_block",
              "block_condition": {
                "type": "origins:in_tag",
                "tag": "minecraft:ice"
              }
            }
          ]
        },
        "action": {
          "type": "origins:change_resource",
          "resource": "moborigins:temperature",
          "change": -1
        }
      },
      {
        "condition": {
          "type": "origins:resource",
          "resource": "moborigins:temperature",
          "comparison": ">=",
          "compare_to": 99
        },
        "action": {
          "type": "origins:damage",
          "amount": 3,
          "source": {
            "name": "onFire",
            "unblockable": true,
            "bypasses_armor": true
          }
        }
      },
      {
        "condition": {
          "type": "origins:biome",
          "condition": {
            "type": "origins:temperature",
            "comparison": ">=",
            "compare_to": 1.0
          }
        },
        "action": {
          "type": "origins:change_resource",
          "resource": "moborigins:temperature",
          "change": 1
        }
      }
    ]
  }
}